{
  "url": "http://localhost:2368/",
  "server": {
    "port": 2368,
    "host": "127.0.0.1"
  },
  "database": {
    "client": "sqlite3",
    "connection": {
      "filename": "./mycontent/data/ghost.db"
    }
  },
  "mail": {
    "transport": "Direct"
  },
  "logging": {
    "level": "info",
    "rotation": {
      "enabled": true,
      "period": "1d",
      "count": 10
    },
    "transports": [
      "file",
      "stdout"
    ]
  },
  "paths": {
    "contentPath": "mycontent"
  },
  "caching": {
    "frontend": {
      "maxAge": 86400
    },
    "theme": {
      "maxAge": 86400
    },
    "favicon": {
      "maxAge": 86400
    },
    "sitemap": {
      "maxAge": 3600
    }
  }
}